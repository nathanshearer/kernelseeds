printf "  "; printf "CONFIG_ACORN_PARTITION_ICS=y\n" | tee -a .config
printf "  "; printf "CONFIG_ACORN_PARTITION_ADFS=y\n" | tee -a .config
printf "  "; printf "CONFIG_ACORN_PARTITION_POWERTEC=y\n" | tee -a .config
printf "  "; printf "CONFIG_ACORN_PARTITION_RISCIX=y\n" | tee -a .config
printf "  "; printf "CONFIG_AIX_PARTITION=y\n" | tee -a .config
printf "  "; printf "CONFIG_OSF_PARTITION=y\n" | tee -a .config
printf "  "; printf "CONFIG_AMIGA_PARTITION=y\n" | tee -a .config
printf "  "; printf "CONFIG_ATARI_PARTITION=y\n" | tee -a .config
printf "  "; printf "CONFIG_MAC_PARTITION=y\n" | tee -a .config
printf "  "; printf "CONFIG_BSD_DISKLABEL=y\n" | tee -a .config
printf "  "; printf "CONFIG_MINIX_SUBPARTITION=y\n" | tee -a .config
printf "  "; printf "CONFIG_SOLARIS_X86_PARTITION=y\n" | tee -a .config
