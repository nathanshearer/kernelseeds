printf "  "; printf "CONFIG_CIFS_UPCALL=y\n" | tee -a .config
printf "  "; printf "CONFIG_CIFS_XATTR=y\n" | tee -a .config
printf "  "; printf "CONFIG_CIFS_POSIX=y\n" | tee -a .config
printf "  "; printf "CONFIG_CIFS_DFS_UPCALL=y\n" | tee -a .config
printf "  "; printf "CONFIG_CIFS_SMB_DIRECT=y\n" | tee -a .config
