echo "Enable Ext Support"
printf "  "; printf "CONFIG_EXT2_FS=m\n" | tee -a .config
printf "  "; printf "CONFIG_EXT2_FS_XATTR=y\n" | tee -a .config
printf "  "; printf "CONFIG_EXT2_FS_POSIX_ACL=y\n" | tee -a .config
