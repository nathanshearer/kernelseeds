echo 'CONFIG_MD_RAID456=y' >>.config

echo "Enable USB support"
printf "  "; printf "CONFIG_USB=y\n" | tee -a .config
printf "  "; printf "CONFIG_USB_PCI=y\n" | tee -a .config
printf "  "; printf "CONFIG_USB_SUPPORT=y\n" | tee -a .config
