echo 'CONFIG_VMWARE_PVSCSI=y' >>.config
echo "  Device Drivers > SCSI device support > SCSI low-level drivers > Legacy MPT2SAS config option (CONFIG_SCSI_MPT2SAS=y)"
echo 'CONFIG_SCSI_MPT2SAS=y' >>.config
