echo 'CONFIG_USB_UAS=n' >>.config

echo "dev-libs/ell and sys-apps/keyutils require CONFIG_KEY_DH_OPERATIONS"
echo "  Security options > Enable access key retention support > Diffie-Hellman operations on retained keys"
echo 'CONFIG_KEY_DH_OPERATIONS=y' >>.config
echo "media-libs/mesa requires CONFIG_CHECKPOINT_RESTORE"
echo "  General setup > Checkpoint/restore support"
echo 'CONFIG_CHECKPOINT_RESTORE=y' >>.config
echo "www-client/google-chrome requires CONFIG_USER_NS"
echo "  General setup > Namespaces support > User namespace"
echo 'CONFIG_USER_NS=y' >>.config

echo "Disable SELinux"
echo "  Security options > NSA SELinux Support"
echo 'CONFIG_SECURITY_SELINUX=n' >>.config

echo "Clear system-wide ring of truted keys and revocation certificates"
printf "  CONFIG_SYSTEM_TRUSTED_KEYS=""\n"; sed -i -r 's/^CONFIG_SYSTEM_TRUSTED_KEYS=".*"$/CONFIG_SYSTEM_TRUSTED_KEYS=""/' .config
printf "  CONFIG_SYSTEM_REVOCATION_KEYS=""\n"; sed -i -r 's/^CONFIG_SYSTEM_REVOCATION_KEYS=".*"$/CONFIG_SYSTEM_REVOCATION_KEYS=""/' .config

printf "Disable unnecessary debugging features\n"
printf "  Disable debug info because it requires pahole at kernel compile time\n"
printf "    "; printf "CONFIG_DEBUG_INFO=n\n" | tee -a .config
printf "    "; printf "CONFIG_DEBUG_INFO_BTF=n\n" | tee -a .config
printf "  Writes \"used greatest stack depth\" to system log\n"
printf "    "; printf "CONFIG_DEBUG_STACK_USAGE=n\n" | tee -a .config
printf "  Disable evbug because it is autoloaded and floods the system log\n"
printf "    "; printf "CONFIG_INPUT_EVBUG=n\n" | tee -a .config

kernelseeds_quiet make olddefconfig

unset ARCH
if $TMPFS; then
	umount "$TMP"
fi
rm -rf --one-file-system "$TMP"
